<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
	<class name="models.Item" table="item">
		<id name="id" type="java.lang.Integer" column="id">
			<generator class="increment"/>
		</id>

		<property name="itemId" column ="item_id" type="Integer"/>
		<property name="itemTotal" column ="item_total" type="Integer"/>
		<property name="quantity" column ="quantity" type="Integer"/>
		

		<set name="carts" table="item_cart" inverse="true" lazy="true"
			fetch="select">
			<key>
				<column name="item_id" />
			</key>
			<many-to-many entity-name="models.Cart">
				<column name="cart_id" not-null="true"></column>
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>
