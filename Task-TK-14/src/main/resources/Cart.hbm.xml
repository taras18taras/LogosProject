<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="models.Cart" table="cart">

		<id name="id" type="int" column="id">
			<generator class="increment"/>
		</id>

		<property name="total" column ="total" type="Integer"/>
		<property name="name" column ="name" type="String"/>
		
		<set name="items" table="cart_item" inverse="true" lazy="true"
			fetch="select" cascade="all">
			<key>
				<column name="card_id" />
			</key>
			<many-to-many entity-name="models.Item">
				<column name="item_id" not-null="true"></column>
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>
